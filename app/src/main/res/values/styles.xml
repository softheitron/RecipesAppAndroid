<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_title_text_size</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_category_text_size</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ma_main_color</item>
    </style>

    <style name="StyleCardDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_description_text_size</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/card_description_color</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/margin_half</item>
    </style>

    <style name="StyleHeader">
        <item name="android:textAppearance">@style/StyleTitle20</item>
        <item name="android:background">@drawable/categories_text_background</item>
        <item name="android:padding">@dimen/header_text_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_main</item>
        <item name="android:layout_marginBottom">@dimen/margin_main</item>
    </style>

    <style name="StyleMontserratRegular14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_title_text_size</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/card_description_color</item>
    </style>

    <style name="StyleRecipePortions" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/portion_text_size</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/portions_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleMethod" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_title_text_size</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/card_description_color</item>
    </style>

    <style name="StyleDivider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/divider_color</item>
        <item name="dividerThickness">@dimen/divider_thickness</item>
    </style>

</resources>
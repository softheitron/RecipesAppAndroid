<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_title_text_size</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_category_text_size</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ma_main_color</item>
    </style>

    <style name="StyleCardDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/style_description_text_size</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/card_description_text</item>
    </style>
    
    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/margin_half</item>
    </style>

    <style name="StyleHeader">
        <item name="android:textAppearance">@style/StyleTitle20</item>
        <item name="android:background">@drawable/categories_text_background</item>
        <item name="android:padding">@dimen/header_text_padding</item>
        <item name="android:gravity">center</item>
    </style>
    
</resources>